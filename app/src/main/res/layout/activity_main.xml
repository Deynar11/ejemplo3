<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <TextView
        android:id="@+id/tvComa"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text=","
        android:background="@color/plomoOscuro"
        android:textColor="@color/blanco"
        android:textSize="50sp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/tvCero"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="0"
        android:background="@color/plomoOscuro"
        android:textColor="@color/blanco"
        android:textSize="50sp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tvComa"/>

    <TextView
        android:id="@+id/tvIgual"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="="
        android:background="@color/plomoOscuro"
        android:textColor="@color/blanco"
        android:textSize="50sp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tvCero"/>

    <TextView
        android:id="@+id/tvUno"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="1"
        android:background="@color/plomoOscuro"
        android:textColor="@color/blanco"
        android:textSize="50sp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_above="@+id/tvComa"/>

    <TextView
        android:id="@+id/tvDos"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="2"
        android:background="@color/plomoOscuro"
        android:textColor="@color/blanco"
        android:textSize="50sp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_above="@+id/tvCero"
        android:layout_toRightOf="@+id/tvUno"/>

    <TextView
        android:id="@+id/tvTres"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="3"
        android:background="@color/plomoOscuro"
        android:textColor="@color/blanco"
        android:textSize="50sp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_above="@+id/tvIgual"
        android:layout_toRightOf="@+id/tvDos"/>

    <TextView
        android:id="@+id/tvCuatro"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="4"
        android:background="@color/plomoOscuro"
        android:textColor="@color/blanco"
        android:textSize="50sp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_above="@+id/tvUno" />

    <TextView
        android:id="@+id/tvCinco"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="5"
        android:background="@color/plomoOscuro"
        android:textColor="@color/blanco"
        android:textSize="50sp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_above="@+id/tvDos"
        android:layout_toRightOf="@+id/tvCuatro"/>

    <TextView
        android:id="@+id/tvSeis"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="6"
        android:background="@color/plomoOscuro"
        android:textColor="@color/blanco"
        android:textSize="50sp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_above="@+id/tvTres"
        android:layout_toRightOf="@+id/tvCinco"/>

    <TextView
        android:id="@+id/tvSiete"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="7"
        android:background="@color/plomoOscuro"
        android:textColor="@color/blanco"
        android:textSize="50sp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_above="@+id/tvCuatro"
        />

    <TextView
        android:id="@+id/tvOcho"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="8"
        android:background="@color/plomoOscuro"
        android:textColor="@color/blanco"
        android:textSize="50sp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_above="@+id/tvCinco"
        android:layout_toRightOf="@+id/tvSiete"/>

    <TextView
        android:id="@+id/tvNueve"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        android:background="@color/plomoOscuro"
        android:textColor="@color/blanco"
        android:textSize="50sp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_above="@+id/tvSeis"
        android:layout_toRightOf="@+id/tvOcho"/>

        <LinearLayout
            android:id="@+id/llOperaciones"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/tvNueve"
            android:layout_below="@+id/tvResultado"
            android:weightSum="5">

            <TextView
                android:layout_width="90dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="CE"
                android:background="@color/plomoClaro"
                android:textColor="@color/blanco"
                android:textSize="30sp"
                android:gravity="center_horizontal|center_vertical"
                />

            <TextView
                android:layout_width="90dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="/"
                android:background="@color/plomoClaro"
                android:textColor="@color/blanco"
                android:textSize="30sp"
                android:gravity="center_horizontal|center_vertical"
                />

            <TextView
                android:layout_width="90dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="*"
                android:background="@color/plomoClaro"
                android:textColor="@color/blanco"
                android:textSize="30sp"
                android:gravity="center_horizontal|center_vertical"
                />

            <TextView
                android:layout_width="90dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="-"
                android:background="@color/plomoClaro"
                android:textColor="@color/blanco"
                android:textSize="30sp"
                android:gravity="center_horizontal|center_vertical"
                />

            <TextView
                android:layout_width="90dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="+"
                android:background="@color/plomoClaro"
                android:textColor="@color/blanco"
                android:textSize="30sp"
                android:gravity="center_horizontal|center_vertical"
                />

        </LinearLayout>

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tvSiete"
        android:text="42354"
        android:gravity="right|center_vertical"
        android:textSize="60sp"
        android:padding="10dp"/>

    <View
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/verde"
        android:layout_below="@id/tvResultado"
        android:layout_toRightOf="@id/llOperaciones"></View>

</RelativeLayout>